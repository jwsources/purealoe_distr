    "host": "karibu-distributor.herokuapp.com",
    "schemes": [
        "https",
        "http"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/inventory/all": {
            "get": {
                "summary": "Returns a list of all available inventory items",
                "description": "",
                "operationId": "getAllInventory",
                "responses": {
                    "200": {
                        "description": "success",
                        "schema": {
                            "$ref": "#/definitions/merchandiseInventoryItems"
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/inventory/{merchandiseName}": {
            "get": {
                "summary": "Get merchandise inventory",
                "description": "",
                "operationId": "getInventory",
                "parameters": [
                    {
                        "name": "merchandiseName",
                        "in": "path",
                        "description": "The name of the merchandise",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success",
                        "schema": {
                            "$ref": "#/definitions/merchandiseInventory"
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    },
    "definitions": {
        "merchandiseInventoryItems": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/merchandiseInventory"
            }
        },
        "merchandiseInventory": {
            "type": "object",
            "properties": {
                "merchandise": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "qty": {
                    "type": "number"
                }
            }
        }
    }
}