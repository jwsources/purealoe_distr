{
    "swagger": "2.0",
    "info": {
        "title": "PureAloe API",
        "description": "Salesforce Demo",
        "version": "1.0.0",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "jweijters@salesforce.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "purealoe.herokuapp.com",
    "schemes": [
        "https"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/inventory/all": {
            "get": {
                "summary": "Returns a list of all available Pure Aloe inventory items",
                "description": "The inventory endpoint returns information the current stock.",
                "operationId": "getAllInventory",
                "responses": {
                    "200": {
                        "description": "success",
                        "schema": {
                            "$ref": "#/definitions/StockList"
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/inventory/{productId}": {
            "get": {
                "summary": "Pure Aloe inventory",
                "description": "The inventory endpoint returns information the current stock.\n",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "The product to request stock update from.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Inventory"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/StockItem"
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "StockList": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/StockItem"
            }
        },
        "StockItem": {
            "type": "object",
            "properties": {
                "productName": {
                    "type": "string",
                    "description": "Unique identifier."
                },
                "warehouse": {
                    "type": "string",
                    "description": "Warehouse name."
                },
                "location": {
                    "type": "string",
                    "description": "Warehouse location."
                },
                "qty": {
                    "type": "integer",
                    "description": "Items in stock."
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}